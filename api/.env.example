# Example .env file for API and Database configuration

# SQLAlchemy/PostgreSQL connection string for the API
DATABASE_URL=

# Port for FastAPI server
PORT=8000

# External authentication system URL (if used)
AUTH_SYSTEM_URL=
# Token for authenticating with the external auth system
AUTH_TOKEN=

# Secret key for session management (keep this secure!)
SESSION_SECRET_KEY=

# Authentication type: 'jwt' or 'cookie'
AUTH_TYPE=jwt  #  jwt or cookie

# Encryption key for rating data (keep this secure!)
RATING_ENCRYPTION_KEY=


# --- Database service variables for Docker Compose ---
# Username for the PostgreSQL database
POSTGRES_USER=
# Password for the PostgreSQL database
POSTGRES_PASSWORD=
# Name of the PostgreSQL database
POSTGRES_DB=
# Port for the PostgreSQL database (used by Docker Compose)
POSTGRES_PORT=

# Enable development mode to insert mock data automatically
DEV=true

# Application mode: Web2 or Web3
MODE=  # Set to 'Web2' for traditional, 'Web3' for blockchain integration

# Weather API configuration
WEATHER_BASE_URL=  # Base URL for weather API
WEATHER_API_KEY=  # API key for OpenWeatherMap
WEATHER_BEARER_TOKEN=  # Bearer token if required by weather API
WEATHER_UNITS=  # Units for weather data (e.g., 'metric', 'imperial')